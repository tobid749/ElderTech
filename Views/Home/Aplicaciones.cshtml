@section Scripts {
<script>
    // Animaci√≥n de respuesta correcta / incorrecta
    document.querySelectorAll('.pregunta button').forEach(btn => {
        btn.addEventListener('click', () => {
            const correcta = btn.parentElement.dataset.correcta;
            const botones = btn.parentElement.querySelectorAll('button');

            botones.forEach(b => {
                b.disabled = true;
                if (b.textContent === correcta) {
                    b.classList.add('correcta');
                } else if (b === btn && b.textContent !== correcta) {
                    b.classList.add('incorrecta');
                }
            });

            if (btn.textContent === correcta) {
                btn.classList.add('animacion-correcta');
            } else {
                btn.classList.add('animacion-incorrecta');
            }
        });
    });
</script>
}

<style>
