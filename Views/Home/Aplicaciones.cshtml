  transition: all 0.3s ease;
}

.app-card img {
  width: 80px;
  height: 80px;
  margin-bottom: 10px;
}

.app-card:hover {
  transform: scale(1.05);
  box-shadow: 0 3px 14px rgba(0,0,0,0.2);
}

/* Animaciones */
.correcta { background-color: #2ecc71 !important; color: white; }
.incorrecta { background-color: #e74c3c !important; color: white; }

.animacion-correcta { animation: correcto 0.4s ease; }
.animacion-incorrecta { animation: incorrecto 0.4s ease; }

</style>
