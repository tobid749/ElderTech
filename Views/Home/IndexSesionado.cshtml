@model IEnumerable<Articulo>
@{
    ViewData["Title"] = "IndexSesionado";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ElderTech</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/estilos.css">
</head>
<body>

<header>
  <nav>
    <div class="nav-left">
      <a href='@Url.Action("IndexSesionado", "Home")' aria-label="Inicio ElderTech" class="brand">
        <img src="/Imagenes/Logo.png" alt="Logo ElderTech" class="logo">
      </a>

      <form action="@Url.Action("Articulos", "Home")" method="get" class="search-form" role="search">
        <input type="search" name="q" placeholder="Buscar artículos" aria-label="Buscar artículos">
        <button type="submit" class="search-btn">🔍</button>
      </form>
    </div>

    <ul class="nav-links">
      <li><a href='@Url.Action("Articulos", "Home")'>Artículos</a></li>
      <li><a href="camino.html">Camino</a></li>
      <li><a href="aplicaciones.html">Aplicaciones</a></li>
      <li><a href="foro.html">Foro</a></li>
      <li><a href="contacto.html">Contacto</a></li>
      <li><a href="ayuda.html">Necesito Ayuda</a></li>
    </ul>
  </nav>
</header>


<section class="banner-eldertech">
    <h1 class="banner-title">
        <span class="banner-elder">Elder</span><span class="banner-tech">Tech</span>
    </h1>
    <p class="banner-sub">El puente que necesitás</p>
</section>


<main class="container mt-5">

    <!-- ✅ Últimos Artículos (3 más nuevos) -->
    <h2 class="titulo-seccion mb-3">Últimos artículos</h2>
    <div class="articulos-grid">
        @foreach (var art in Model.Take(3))
        {
            <div class="articulo">
                <img src="@art.Foto" alt="@art.Titulo" class="articulo-img">
                <div class="articulo-info">
                    <h3>@art.Titulo</h3>
                    <p>@art.Subtitulo</p>
                    <p><b>Usuario</b> - @art.Fecha.ToShortDateString()</p>
                </div>
            </div>
        }
    </div>


    <!-- ✅ Artículos más populares (por ahora los restantes) -->
    <h2 class="titulo-seccion mt-5">Artículos más populares</h2>
    <div class="articulos-grid">
        @foreach (var art in Model.Skip(3).Take(3))
        {
            <div class="articulo">
                <img src="@art.Foto" alt="@art.Titulo" class="articulo-img">
                <div class="articulo-info">
                    <h3>@art.Titulo</h3>
                    <p>@art.Subtitulo</p>
                    <p><b>Usuario</b> - @art.Fecha.ToShortDateString()</p>
                </div>
            </div>
        }
    </div>

</main>

</body>
</html>
