<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="style.css">
  <title>ElderTech · Necesito Ayuda</title>
</head>


<script>
function enviarMail(e) {
    e.preventDefault(); // evita que el form recargue la página


    let tema = document.getElementById("tema").value;
    let duda = document.getElementById("duda").value;


    // Armamos el mailto
    let mail = "mailto:eldertech6@gmail.com"
             + "?subject=" + encodeURIComponent("Consulta: " + tema)
             + "&body=" + encodeURIComponent(duda);


    // Abrimos el correo
    window.location.href = mail;
}
</script>


<body>


<main>
<section class="contenedor">
 
  <!-- Panel izquierdo -->
  <div class="panel-izquierdo">
    <section class="btn-volver">
      <button onclick="history.back()">←</button>
    </section>
    <section class="fondoIzquierda"></section>
  </div>


  <!-- Panel derecho -->
  <div class="panel-derecho">
    <section class="avatar">
      <figure>
        <img src="/Imagenes/Avatar.png" alt="Avatar de usuario" />
      </figure>
    </section>


    <h1>Necesito ayuda</h1>


    <section class="formNecesitoAyuda">
      <form onsubmit="enviarMail(event)">
        <label for="tema">Tema</label>
        <select id="tema" name="Tema" required>
          <option value="Tema 1">Tema1</option>
          <option value="Tema 2">Tema2</option>
          <option value="Otro">Otro</option>
        </select>


        <label for="duda">Duda</label>
        <textarea id="duda" name="Duda" rows="4" required></textarea>


        <button type="submit">Enviar</button>
      </form>
    </section>
  </div>
</section>
</main>


<footer>
  <div>
    <small>© ElderTech</small>
    <small>Ayuda: ElderTech6@gmail.com</small>
  </div>
</footer>


</body>
</html>



