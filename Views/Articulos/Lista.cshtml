@model IEnumerable<Eldertech.Models.Articulo>
@{
    ViewData["Title"] = "Artículos";
}

<h2>Artículos</h2>

<a asp-action="CrearArticulo">Crear nuevo</a>

@if (Model != null && Model.Any())
{
    <ul>
    @foreach (var art in Model)
    {
        <li>
            <a asp-action="Detalle" asp-route-id="@art.IDArticulo">@art.Titulo</a>
            — @art.AutorNombre — @art.Fecha.ToString("dd/MM/yyyy")
        </li>
    }
    </ul>
}
else
{
    <p>No hay artículos aún.</p>
}
